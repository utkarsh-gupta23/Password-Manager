<h1>Sign Up</h1>

<%= form_with(url: signup_path, method: :post, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :user_name %>
    <%= form.text_field :user_name, class: "form-control", placeholder: "Enter your username" %>
  </div>

  <div class="form-group">
    <%= form.label :display_name %>
    <%= form.text_field :display_name, class: "form-control", placeholder: "Enter your full name" %>
  </div>

  <div class="form-group">
    <%= form.label :password %>
    <%= form.password_field :password, class: "form-control", placeholder: "Enter your password" %>
  </div>

  <div class="form-group">
    <%= form.submit "Sign Up", class: "btn btn-primary" %>
  </div>
<% end %>