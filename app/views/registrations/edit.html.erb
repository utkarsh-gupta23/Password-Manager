<h1>Edit Profile</h1>

<%= form_with(model: @user, url: registration_path(@current_user), method: :patch, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :user_name %>
    <%= form.text_field :user_name, class: "form-control", placeholder: "Enter your full name", value: @current_user.user_name %>
  </div>
  <div class="form-group">
    <%= form.label :password %>
    <%= form.password_field :password, class: "form-control", placeholder: "Enter current password" %>
  </div>

  <div class="form-group">
    <%= form.label :new_password %>
    <%= form.password_field :new_password, class: "form-control", placeholder: "Enter a new password" %>
     <small class="form-text text-muted">Leave blank if you don't want to change the password</small>
  </div>

  <div class="form-group">
    <%= form.submit "Update Profile", class: "btn btn-primary" %>
  </div>
<% end %>